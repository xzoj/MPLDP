@model LandingPage.Models.Information
<style>
    .myinput {
        color: #fff !important;
        height: 35px !important;
        background-color:#fff;
    }

    .mybutton:hover {
        color: #000 !important;
    }
</style>
<div id="loadingGif" style="display:none"><img src="https://media.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif"></div>
@using (Ajax.BeginForm("Index", "LandingPages", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "frmEmp" }))
{
    <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">MP Language</h5>
                    
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="frmEmp">
                    <p>Vui lòng nhập thông tin bên dưới để được tư vấn miễn phí nhé.</p>
                    <hr/>
                    @Html.Partial("_ModalContent")
                </div>
                <div class="modal-footer">
                    <button type="submit" class="contact-btn btn mybutton" id="submitting">Gửi</button>
                </div>
            </div>
        </div>
    </div>
}

