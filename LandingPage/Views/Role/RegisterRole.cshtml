@model Microsoft.AspNet.Identity.EntityFramework.IdentityUser
@{
    ViewBag.Title = "AssignRoleToUser";
    Layout = "~/Views/Shared_Admin/_Layout.cshtml";
}


<style>
    .padding {
        padding-top: 15px;
        padding-bottom: 8px;
    }
</style>
<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Thêm Quyền Cho Nhân Viên
                </header>
                <div class="panel-body">
                    @using (Html.BeginForm("RegisterRole", "Role", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.Label("Select User", new { @class = "col-sm-2 control-label col-lg-2" })
                            <div class="col-md-2">
                                @Html.DropDownList("UserName", null, new { @class = "form-control m-bot15" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Select Role", new { @class = "col-sm-2 control-label col-lg-2" })
                            <div class="col-md-2">
                                @Html.DropDownList("RoleName", null, new { @class = "form-control m-bot15" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Role" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </section>
        </div>




    </div>


</div>
