@model LandingPage.Models.Information

@Html.AntiForgeryToken()


<div class="row">
    <div class="col-lg-12 col-md-12 row">
        <label class="control-label col-sm-3" for="Name">Họ và Tên :</label>
        <div class="form-group col-sm-9">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control myinput", @placeholder = "Nguyễn Văn A", @id = "name", @Value = "" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-12 col-md-12 row">
        <label class="control-label col-sm-3" for="Email">Email :</label>
        <div class="form-group col-sm-9">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control myinput", @placeholder = "Ví dụ: abc@gmail.com", @id = "email", @value = "" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-12 col-md-12 row">
        <label class="control-label col-sm-3" for="Phone">Phone :</label>
        <div class="form-group col-sm-9">
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control myinput", @placeholder = "02473 088 858", @id = "phone", @value = "" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

        </div>
    </div>
</div>
@if((string)TempData["message"] == "Success")
{
    <script >
        Swal.fire(
            'Thanks You!',
            'Chúng tôi đã nhận được thông tin của bạn, Tư vấn viên sẽ liên lạc lại trong thời gian sớm nhất!',
            'success'
        )
    </script>
}