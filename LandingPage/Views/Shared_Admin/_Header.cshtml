@using Microsoft.AspNet.Identity
<div class="header-section">

    <!--toggle button start-->
    <a class="toggle-btn">
        <i class="fa fa-bars"></i>
    </a>

    <!--search end-->
    <!--notification menu start -->
    <div class="menu-right">
        <ul class="notification-menu">


            <li>
                <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown"> Xin Chào , 
                    @User.Identity.GetUserName().ToUpper()
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-usermenu pull-right">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>Đăng Xuất</a></li>

                    }
                </ul>
            </li>

        </ul>
    </div>
    <!--notification menu end -->

</div>