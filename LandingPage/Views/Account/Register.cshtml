@model LandingPage.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared_Admin/_Login.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    <div class="form-signin-heading text-center">
        <h1 class="sign-title">Registrantion</h1>
        <img src="~/AdminTemplate/images/login-logo.png" alt="" />
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="login-wrap">
    <input type="text" class="form-control" placeholder="User Name" id="UserName" name="UserName" autofocus>
    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
    <input type="text" class="form-control" placeholder="Email" id="Email" name="Email" autofocus>
    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    <input type="password" class="form-control" placeholder="PassWord" id="Password" name="Password">
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    <input type="password" class="form-control" placeholder="ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" />
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
   
    <button type="submit" class="btn btn-lg btn-login btn-block">
        Sign Up
    </button>

    <div class="registration">
        Already Registered.
        <a href="login" class="">
            Login
        </a>
    </div>
</div>

}